<!DOCTYPE html>
<html lang="en">

<head>
  <title>Apartrent | Quản trị gói tin</title>
</head>

<body>
  <%- include ("./header.ejs"); -%>

  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12">
          <div class="card mb-0">
            <div class="card-body">
              <h4>Quản trị gói tin đăng</h4>
            </div>
          </div>
        </div>
      </div>

      <!-- Bảng dữ liệu -->
      <div class="row mt-2">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4>Danh sách gói tin</h4>
              <div class="card-header-form ml-auto">
                <button class="btn btn-primary" onclick="openAddModal()">Thêm gói tin</button>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped" id="package-table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Tên gói</th>
                      <th>Giá (VNĐ)</th>
                      <th>Loại</th>
                      <th>Hành động</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- Dữ liệu render từ JS -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal thêm/sửa -->
  <div class="modal fade" id="packageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Thêm / Sửa gói tin</h5>
          <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="packageId">
          <div class="form-group">
            <label>Tên gói</label>
            <input type="text" class="form-control" id="packageName" required>
          </div>
          <div class="form-group">
            <label>Giá (VNĐ)</label>
            <input type="number" class="form-control" id="packagePrice" required>
          </div>
          <div class="form-group">
            <label>Loại</label>
            <select class="form-control" id="packageType">
              <option value="daily">daily</option>
              <option value="click">click</option>
              <option value="guest">guest</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-dismiss="modal">Hủy</button>
          <button class="btn btn-primary" onclick="savePackage()">Lưu</button>
        </div>
      </div>
    </div>
  </div>

  <%- include ("./footer.ejs"); -%>
  <script src="/JS/packageManagement/packageManagement.js"></script>
</body>

</html>
